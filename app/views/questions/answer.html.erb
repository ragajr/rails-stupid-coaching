<div class="container mt-5">
  <div class="card mx-auto" style="width: 500px;">
    <div class="card-body">
      <h1 class="card-title">Stupid Coaching</h1>
      <h2 class="card-subtitle mb-2">Your Question:</h2>
      <p class="card-text"><%= params[:question] %></p>
      <hr>
      <h2 class="card-subtitle mb-2">Coach's Answer:</h2>
      <p class="card-text"><%= @answer %></p>
      <%= link_to "Ask another question", questions_ask_path %>
    </div>
  </div>
</div>
